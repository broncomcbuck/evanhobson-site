---
const currentPath = Astro.url.pathname;
const isActive = (href: string) => {
  if (href === "/") return currentPath === "/";
  return currentPath.startsWith(href);
};
---

<nav class="topnav" aria-label="Primary navigation">
  <div class="nav-inner">
    <div class="links">
      <a class={isActive("/") ? "active" : ""} href="/">Home</a>
      <a class={isActive("/about") ? "active" : ""} href="/about">About</a>
      <a class={isActive("/research") ? "active" : ""} href="/research">Research</a>
      <a class={isActive("/projects") ? "active" : ""} href="/projects">Projects</a>
      <a class={isActive("/writing") ? "active" : ""} href="/writing">Writing</a>
      <a class={isActive("/cv") ? "active" : ""} href="/cv">CV</a>
    </div>
  </div>
</nav>

<style>
.topnav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: var(--nav-h);
  display: flex;
  justify-content: center;
  align-items: center;

  background: rgba(255, 255, 255, 0.40);
  backdrop-filter: blur(12px);

  z-index: 5000;
  border-bottom: 1px solid rgba(0,0,0,0.10);
}

.nav-inner {
  width: min(1100px, calc(100% - 3rem));
  display: flex;
  align-items: center;
  justify-content: flex-end; /* links only */
}

.links {
  display: flex;
  gap: 1.15rem;
  align-items: center;
  flex-wrap: wrap;
  justify-content: flex-end;
}

.links a {
  font-family: "Inter", sans-serif;
  font-size: 0.95rem;
  font-weight: 650;
  text-decoration: none;
  color: rgba(45, 36, 27, 0.78);
  padding: 0.35rem 0.1rem;
  border-bottom: 2px solid transparent;
  transition: color 0.2s ease, border-color 0.2s ease, opacity 0.2s ease;
}

.links a:hover {
  color: rgba(45, 36, 27, 0.95);
}

.links a.active {
  color: rgba(45, 36, 27, 0.98);
  border-bottom-color: rgba(93, 60, 40, 0.55);
}

@media (max-width: 720px) {
  .links { gap: 0.85rem; }
  .links a { font-size: 0.9rem; }
}

@media (max-width: 520px) {
  .links a { font-size: 0.88rem; }
}
</style>
