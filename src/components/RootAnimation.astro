<div class="my-32 relative flex justify-center">
  <svg
    viewBox="0 0 300 100"
    class="h-32 w-full max-w-xl stroke-accent-primary"
    fill="none"
    stroke-width="2"
    id="root-animation"
  >
    <path
      id="root-path"
      d="M10 90 C 60 10, 240 10, 290 90"
      stroke="currentColor"
    />
  </svg>

  <script is:inline>
    const path = document.getElementById("root-path");
    const length = path.getTotalLength();

    path.style.strokeDasharray = length;
    path.style.strokeDashoffset = length;

    function updateRootAnimation() {
      const rect = path.getBoundingClientRect();
      const windowHeight = window.innerHeight;

      const visible = Math.max(0, windowHeight - rect.top);
      const draw = Math.min(length, (visible / windowHeight) * length);

      path.style.strokeDashoffset = length - draw;
    }

    window.addEventListener("scroll", updateRootAnimation, { passive: true });
    window.addEventListener("load", updateRootAnimation);
  </script>
</div>
