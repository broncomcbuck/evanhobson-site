/* ===== THEME TOKENS (manual toggle, high contrast) ===== */

/* LIGHT MODE */
[data-theme="light"] {
  --bg: #f5f7fa;            /* neutral light gray */
  --surface: #ffffff;      /* cards / panels */
  --surface-2: #f0f2f5;    /* subtle contrast */
  --text: #0f172a;         /* near-black */
  --text-2: #334155;       /* slate */
  --muted: #64748b;        /* cool gray */
  --border: rgba(15,23,42,0.12);

  /* accent: restrained sage/steel */
  --accent: #4f766a;

  --shadow: 0 12px 28px rgba(15,23,42,0.12);
}

/* DARK MODE */
[data-theme="dark"] {
  --bg: #0b0f14;            /* deep ink */
  --surface: #121821;      /* panels */
  --surface-2: #18202c;    /* hover / alt */
  --text: #e5e7eb;         /* near-white */
  --text-2: #cbd5e1;       /* light slate */
  --muted: #94a3b8;
  --border: rgba(226,232,240,0.14);

  --accent: #7fb3a3;       /* brighter in dark */

  --shadow: 0 18px 42px rgba(0,0,0,0.55);
}

/* GLOBAL APPLICATION */
html, body {
  background: var(--bg);
  color: var(--text);
}

p, li {
  color: var(--text-2);
}

a {
  color: inherit;
}

/* headings should snap */
h1, h2, h3, h4 {
  color: var(--text);
}

/* selection */
::selection {
  background: color-mix(in oklab, var(--accent) 35%, transparent);
}
